@model IEnumerable<ResumeAnalyzer.Application.DTOs.MatchingResultDto>
@{
    ViewData["Title"] = "Matching Results";
}

<div class="container mt-4">
    <h2>Matching Results</h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Resume</th>
                        <th>Job</th>
                        <th>Match %</th>
                        <th>Skills Matched</th>
                        <th>Text Similarity</th>
                        <th>Matched At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model)
                    {
                        var matchColor = result.MatchPercentage >= 80 ? "success" : result.MatchPercentage >= 60 ? "warning" : "danger";
                        <tr>
                            <td>@result.ResumeFileName</td>
                            <td>
                                <strong>@result.JobTitle</strong><br />
                                <small class="text-muted">@result.Company</small>
                            </td>
                            <td>
                                <span class="badge bg-@matchColor" style="font-size: 1em; padding: 0.5em 1em;">
                                    @result.MatchPercentage.ToString("F1")%
                                </span>
                            </td>
                            <td>@result.MatchingSkillsCount / @result.TotalJobSkillsCount</td>
                            <td>@(result.CosineSimilarityScore * 100).ToString("F1")%</td>
                            <td>@result.MatchedAt.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Result" asp-route-resumeId="@result.ResumeId" asp-route-jobDescriptionId="@result.JobDescriptionId" class="btn btn-sm btn-info">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>No matching results found</h5>
            <p>Perform a match to see results here.</p>
            <a asp-action="Index" class="btn btn-primary">Go to Dashboard</a>
        </div>
    }
</div>

